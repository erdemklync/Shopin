<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
	    motion:motionInterpolator="cubic(0,52,0,06,0,8,0,8)">
	    <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
	    <Constraint
		    android:id="@+id/image_product"
		    android:layout_width="64dp"
		    android:layout_height="64dp"

		    motion:layout_constraintTop_toBottomOf="@id/toolbar"
		    motion:layout_constraintStart_toStartOf="parent"
		    />

	    <Constraint
		    android:id="@+id/text_product_title"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"

		    motion:layout_constraintTop_toTopOf="@id/image_product"
		    motion:layout_constraintStart_toEndOf="@id/image_product"
		    motion:layout_constraintEnd_toEndOf="parent"
		    />

	    <Constraint
		    android:id="@+id/text_product_rating"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"

		    motion:layout_constraintTop_toBottomOf="@id/text_product_title"
		    motion:layout_constraintStart_toEndOf="@id/image_product"
		    />

    </ConstraintSet>
</MotionScene>